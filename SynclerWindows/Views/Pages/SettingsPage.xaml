<UserControl x:Class="SynclerWindows.Views.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource SynclerCardStyle}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="⚙️" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock Text="Settings" Style="{StaticResource SynclerHeadingStyle}" HorizontalAlignment="Center"/>
            <TextBlock Text="Configure your Syncler experience" Style="{StaticResource SynclerBodyTextStyle}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>