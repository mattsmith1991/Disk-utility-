<UserControl x:Class="SynclerWindows.Views.Pages.ProfilePage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource SynclerCardStyle}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="96" Height="96" Fill="{StaticResource SynclerAccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock Text="User Profile" Style="{StaticResource SynclerHeadingStyle}" HorizontalAlignment="Center"/>
            <TextBlock Text="Manage your account and preferences" Style="{StaticResource SynclerBodyTextStyle}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>