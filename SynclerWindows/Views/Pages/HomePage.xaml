<UserControl x:Class="SynclerWindows.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:SynclerWindows.ViewModels">
    
    <UserControl.DataContext>
        <viewmodels:HomePageViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,24,0">
        <StackPanel>
            <!-- Welcome Section -->
            <Border Style="{StaticResource SynclerCardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Welcome back!" 
                                   Style="{StaticResource SynclerHeadingStyle}"
                                   FontSize="28"/>
                        <TextBlock Text="Discover new movies and shows, or continue watching where you left off."
                                   Style="{StaticResource SynclerBodyTextStyle}"
                                   Margin="0,8,0,16"/>
                        <Button Content="Browse Popular" 
                                Style="{StaticResource SynclerButtonStyle}"
                                HorizontalAlignment="Left"
                                Command="{Binding BrowsePopularCommand}"/>
                    </StackPanel>
                    
                    <Border Grid.Column="1" 
                            Width="200" 
                            Height="120"
                            Background="{StaticResource SynclerPrimaryGradient}"
                            CornerRadius="12"
                            Margin="24,0,0,0">
                        <TextBlock Text="ðŸŽ¬" 
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Continue Watching Section -->
            <StackPanel Margin="0,0,0,32" Visibility="{Binding HasContinueWatching, Converter={x:Static BooleanToVisibilityConverter.Instance}}">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Continue Watching" 
                               Style="{StaticResource SynclerSubheadingStyle}"/>
                    
                    <Button Grid.Column="1"
                            Content="View All"
                            Style="{StaticResource SynclerButtonStyle}"
                            Background="Transparent"
                            Command="{Binding ViewAllContinueWatchingCommand}"/>
                </Grid>
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding ContinueWatching}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SynclerCardStyle}"
                                        Width="200"
                                        Height="300"
                                        Margin="0,0,16,0"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.PlayMediaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Poster Image Placeholder -->
                                        <Border Grid.Row="0" 
                                                Background="{StaticResource SynclerSecondaryBrush}"
                                                CornerRadius="8,8,0,0">
                                            <TextBlock Text="ðŸŽ¬" 
                                                       FontSize="48"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                        </Border>
                                        
                                        <!-- Progress Bar -->
                                        <ProgressBar Grid.Row="0"
                                                     VerticalAlignment="Bottom"
                                                     Height="4"
                                                     Value="{Binding ProgressPercentage}"
                                                     Maximum="100"
                                                     Background="Transparent"
                                                     Foreground="{StaticResource SynclerAccentBrush}"
                                                     Margin="8,0,8,8"/>
                                        
                                        <!-- Title -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding DisplayTitle}"
                                                   Style="{StaticResource SynclerBodyTextStyle}"
                                                   FontWeight="SemiBold"
                                                   Margin="12,8,12,4"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Info -->
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding DisplayDate}"
                                                   Style="{StaticResource SynclerBodyTextStyle}"
                                                   FontSize="12"
                                                   Margin="12,0,12,12"
                                                   Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            
            <!-- Trending Section -->
            <StackPanel Margin="0,0,0,32">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Trending Now" 
                               Style="{StaticResource SynclerSubheadingStyle}"/>
                    
                    <Button Grid.Column="1"
                            Content="View All"
                            Style="{StaticResource SynclerButtonStyle}"
                            Background="Transparent"
                            Command="{Binding ViewAllTrendingCommand}"/>
                </Grid>
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding TrendingContent}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SynclerCardStyle}"
                                        Width="180"
                                        Height="270"
                                        Margin="0,0,16,0"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Poster Image Placeholder -->
                                        <Border Grid.Row="0" 
                                                Background="{StaticResource SynclerSecondaryBrush}"
                                                CornerRadius="8,8,0,0">
                                            <TextBlock Text="ðŸŽ¬" 
                                                       FontSize="40"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                        </Border>
                                        
                                        <!-- Rating Badge -->
                                        <Border Grid.Row="0"
                                                Background="{StaticResource SynclerPrimaryBrush}"
                                                CornerRadius="12"
                                                Padding="8,4"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="8">
                                            <TextBlock Text="{Binding VoteAverage, StringFormat={}{0:F1}}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="Bold"/>
                                        </Border>
                                        
                                        <!-- Title -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding DisplayTitle}"
                                                   Style="{StaticResource SynclerBodyTextStyle}"
                                                   FontWeight="SemiBold"
                                                   Margin="12,8,12,4"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Info -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="12,0,12,12">
                                            <TextBlock Text="{Binding DisplayDate}"
                                                       Style="{StaticResource SynclerBodyTextStyle}"
                                                       FontSize="12"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                            <TextBlock Text=" â€¢ " 
                                                       FontSize="12"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding Type}"
                                                       Style="{StaticResource SynclerBodyTextStyle}"
                                                       FontSize="12"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            
            <!-- Popular Movies Section -->
            <StackPanel Margin="0,0,0,32">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Popular Movies" 
                               Style="{StaticResource SynclerSubheadingStyle}"/>
                    
                    <Button Grid.Column="1"
                            Content="View All"
                            Style="{StaticResource SynclerButtonStyle}"
                            Background="Transparent"
                            Command="{Binding ViewAllMoviesCommand}"/>
                </Grid>
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding PopularMovies}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SynclerCardStyle}"
                                        Width="160"
                                        Height="240"
                                        Margin="0,0,12,0"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Poster Image Placeholder -->
                                        <Border Grid.Row="0" 
                                                Background="{StaticResource SynclerSecondaryBrush}"
                                                CornerRadius="8,8,0,0">
                                            <TextBlock Text="ðŸŽ¬" 
                                                       FontSize="32"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                        </Border>
                                        
                                        <!-- Title -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding DisplayTitle}"
                                                   Style="{StaticResource SynclerBodyTextStyle}"
                                                   FontWeight="SemiBold"
                                                   Margin="8,8,8,12"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            
            <!-- Popular TV Shows Section -->
            <StackPanel Margin="0,0,0,32">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Popular TV Shows" 
                               Style="{StaticResource SynclerSubheadingStyle}"/>
                    
                    <Button Grid.Column="1"
                            Content="View All"
                            Style="{StaticResource SynclerButtonStyle}"
                            Background="Transparent"
                            Command="{Binding ViewAllTVShowsCommand}"/>
                </Grid>
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding PopularTVShows}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SynclerCardStyle}"
                                        Width="160"
                                        Height="240"
                                        Margin="0,0,12,0"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Poster Image Placeholder -->
                                        <Border Grid.Row="0" 
                                                Background="{StaticResource SynclerSecondaryBrush}"
                                                CornerRadius="8,8,0,0">
                                            <TextBlock Text="ðŸ“º" 
                                                       FontSize="32"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource SynclerTextSecondaryBrush}"/>
                                        </Border>
                                        
                                        <!-- Title -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding DisplayTitle}"
                                                   Style="{StaticResource SynclerBodyTextStyle}"
                                                   FontWeight="SemiBold"
                                                   Margin="8,8,8,12"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>