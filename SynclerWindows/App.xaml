<Application x:Class="SynclerWindows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Application Resources -->
            <SolidColorBrush x:Key="SynclerPrimaryBrush" Color="#FF6C5CE7"/>
            <SolidColorBrush x:Key="SynclerSecondaryBrush" Color="#FF2D3748"/>
            <SolidColorBrush x:Key="SynclerAccentBrush" Color="#FF4FD1C7"/>
            <SolidColorBrush x:Key="SynclerBackgroundBrush" Color="#FF1A202C"/>
            <SolidColorBrush x:Key="SynclerSurfaceBrush" Color="#FF2D3748"/>
            <SolidColorBrush x:Key="SynclerTextBrush" Color="#FFFFFFF0"/>
            <SolidColorBrush x:Key="SynclerTextSecondaryBrush" Color="#FFA0AEC0"/>
            
            <!-- Global Styles -->
            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource SynclerBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource SynclerTextBrush}"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>